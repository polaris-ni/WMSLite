<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rv_all_mcv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_all_index"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            tools:text="1" />

        <TextView
            android:id="@+id/item_all_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/item_all_index"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="goods name" />

        <TextView
            android:id="@+id/item_all_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_all_name"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/item_all_index"
            android:textSize="16sp"
            tools:text="Wuhan, Hubei" />

        <TextView
            android:id="@+id/item_all_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:drawablePadding="4dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:drawableTopCompat="@drawable/ic_warehouse_24"
            tools:ignore="RelativeOverlap"
            tools:text="1000" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>